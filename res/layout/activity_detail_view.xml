<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout 
	    android:id="@+id/detail_moveType"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	   	<TextView
	        android:id="@+id/detail_handLabel"
	        android:text="@string/text_hand"
	        style="@style/ListItem"
	        android:layout_marginRight="3dp"
	        />
	    <TextView
	        android:id="@+id/detail_poiLabel"
	        android:text="@string/text_prop"
	        style="@style/ListItem"
	        android:layout_marginRight="3dp"
	        android:layout_below="@id/detail_handLabel"
	        />
	   		
	    <TextView
	        android:id="@+id/detail_handText"
	        android:text="description2"
	        android:layout_alignBaseline="@id/detail_handLabel"
	        android:layout_toRightOf="@id/detail_handLabel"
	        android:maxLines="1"
	        style="@style/DescText"
	        android:gravity="center_horizontal"
	        android:layout_width="match_parent"
	        />
	   	<TextView
	        android:id="@+id/detail_poiText"
	        android:text="description1"
			android:layout_alignBaseline="@id/detail_poiLabel"
	        android:layout_toRightOf="@id/detail_poiLabel"
	        android:maxLines="1"
	        style="@style/DescText"
	        android:gravity="center_horizontal"
	        android:layout_below="@id/detail_handText"
	        android:layout_width="match_parent"
	   		/>
   	</RelativeLayout>
    <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/detail_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        <!--
    This title strip will display the currently visible page title,
    as well as the page titles for adjacent pages.
    -->
        <android.support.v4.view.PagerTitleStrip
                android:id="@+id/detail_tab_strip"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="top"
                 android:background="#33b5e5"
                 android:textColor="#fff"
                 android:paddingTop="4dp"
                 android:paddingBottom="4dp" />
    </android.support.v4.view.ViewPager>

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical" >
        <RelativeLayout 
         	 android:layout_width="match_parent"
   			 android:layout_height="match_parent"
   			 android:orientation="vertical">
		        
			<com.nennig.vtglibrary.draw.VTGMove
	   		    android:id="@+id/detail_customMoveDraw"
	   		    android:layout_below="@id/detail_moveType"
	   		    android:layout_width="match_parent"
	   		    android:layout_height="wrap_content"
	   		    android:padding="10dp"
	   		    android:background="@android:color/white"
			/>
		 	<TextView
			       android:id="@+id/detail_moveName"
			       android:layout_width="match_parent"
			       android:layout_height="wrap_content"
			       android:gravity="center"
			       android:textSize="22sp"
			       android:textStyle="bold"
			       android:text="Name"
			       android:layout_alignParentBottom="true"
			       style="@style/DescText"
		   		/>
	 	</RelativeLayout>
 	</ViewFlipper>
</LinearLayout>
