<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  >   

     <LinearLayout 
        android:id="@+id/prop_dropdown_labels"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2"
        >
		<TextView
       		android:id="@+id/prop_poi_label"
       		android:text="@string/prop_poi_text"
        	style="@style/ListItem"
        	android:layout_weight="1"
        	>
   		</TextView>
   		<TextView
       		android:id="@+id/prop_hand_label"
       		android:text="@string/prop_hand_text"
        	style="@style/ListItem"
        	android:layout_weight="1"
        	>
   		</TextView>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/prop_dropdown_layout"
        android:layout_below="@id/prop_dropdown_labels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
	<Spinner
        android:id="@+id/prop_poi_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:entries="@array/poi_dropdown"
        android:prompt="@string/prop_poi_text"
		android:layout_weight="1"/>
    <Spinner
        android:id="@+id/prop_hand_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:entries="@array/hand_dropdown"
        android:prompt="@string/prop_poi_text" 
        android:layout_weight="1"/>
	</LinearLayout>
   
    <RelativeLayout
        android:id="@+id/prop_combo_frames"
        android:layout_below="@id/prop_dropdown_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:weightSum="4"
        >
        
        <ImageView
		    android:id="@+id/prop_pos_0"
		    style="@style/IconView"
		    />
        <ImageView
		    android:id="@+id/prop_pos_1"
		    android:layout_below="@id/prop_hand_spinner"
		    android:layout_toRightOf="@id/prop_pos_0"
			style="@style/IconView"
		    />
                <ImageView
		    android:id="@+id/prop_pos_2"
		    android:layout_below="@id/prop_pos_0"
		    style="@style/IconView"
		    />
        <ImageView
		    android:id="@+id/prop_pos_3"
		    android:layout_below="@id/prop_pos_1"
		    android:layout_toRightOf="@id/prop_pos_2"
			style="@style/IconView"
		    />
    </RelativeLayout>

</RelativeLayout>
