<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    

   
<Button
        android:id="@+id/prop_ss_button"
        style="@style/ButtonText"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
		android:layout_margin="10dp"
        android:background="@drawable/orange_button"
        android:text="@string/prop_ss_button" />
 <Button
        android:id="@+id/prop_sc_button"
        style="@style/ButtonText"
        android:layout_above="@id/prop_ss_button"
        android:layout_centerHorizontal="true"
		android:layout_margin="10dp"
        android:background="@drawable/orange_button"
        android:text="@string/prop_sc_button" />
<Button
        android:id="@+id/prop_to_button"
        style="@style/ButtonText"
        android:layout_above="@id/prop_sc_button"
        android:layout_centerHorizontal="true"
		android:layout_margin="10dp"
        android:background="@drawable/orange_button"
        android:text="@string/prop_to_button" />
    <Button
        android:id="@+id/prop_ts_button"
        style="@style/ButtonText"
        android:layout_above="@id/prop_to_button"
        android:layout_centerHorizontal="true"
		android:layout_margin="10dp"
        android:background="@drawable/orange_button"
        android:text="@string/prop_ts_button" />

</RelativeLayout>
