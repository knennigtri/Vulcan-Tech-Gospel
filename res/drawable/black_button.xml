<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/black_light" />
            <stroke
                android:width="1dp"
                android:color="@color/black_dark" />
            <corners
                android:radius="@dimen/button_radius" />
            <padding
                android:left="@dimen/button_left_padding"
                android:top="@dimen/button_top_padding"
                android:right="@dimen/button_right_padding"
                android:bottom="@dimen/button_bottom_padding" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/black_light"
                android:endColor="@color/black_dark"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/black_dark" />
            <corners
                android:radius="@dimen/button_radius" />
            <padding
                android:left="@dimen/button_left_padding"
                android:top="@dimen/button_top_padding"
                android:right="@dimen/button_right_padding"
                android:bottom="@dimen/button_bottom_padding"  />
        </shape>
    </item>
</selector>
